{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "イーロン砲",
  "description": "ツイートの表示回数を水増しする拡張機能",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "src/event.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "permissions": ["tabs", "activeTab", "storage"]
}